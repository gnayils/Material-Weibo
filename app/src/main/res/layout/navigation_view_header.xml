<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <ImageView
        android:id="@+id/image_view_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_cover_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <FrameLayout
                android:id="@+id/frame_layout"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/bg_oval_white_a75">

                <com.gnayils.obiew.view.AvatarView
                    android:id="@+id/avatar_view"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center"
                    app:avatarImage="@drawable/ic_avatar"/>

            </FrameLayout>

            <TextView
                android:id="@+id/text_view_screen_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/frame_layout"
                android:layout_alignTop="@id/frame_layout"
                android:shadowColor="#75000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="未登录"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/frame_layout"
                android:layout_alignBottom="@id/frame_layout"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:shadowColor="#75000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="暂无介绍"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:padding="4dp">

            <Button
                android:id="@+id/button_status_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#75000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="0\n微博"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_follow_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#75000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="0\n关注"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_follower_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:shadowColor="#75000000"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="0\n粉丝"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
