<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/black_alpha_CC</item>
    </style>

    <style name="AppTheme.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:statusBarColor">@color/black_alpha_4D</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->

    </style>

    <style name="AppTheme.DarkBackground">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.ExpandedTitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#75000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme.TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
