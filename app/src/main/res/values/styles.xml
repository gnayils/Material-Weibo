<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="themeColorPrimary">@color/primaryColor</item>
        <item name="themeColorPrimaryDark">@color/primaryDarkColor</item>
        <item name="themeColorAccent">@color/accentColor</item>
        <item name="themeColorAccentDark">@color/accentDarkColor</item>
        <item name="themeColorPrimaryInverse">@color/primaryInverseColor</item>
        <item name="themeColorAccentInverse">@color/accentInverseColor</item>
        <item name="themeColorPrimaryText">@color/primaryTextColor</item>
        <item name="themeColorSecondaryText">@color/secondaryTextColor</item>
        <item name="themeColorPrimaryInverseText">@color/primaryTextInverseColor</item>
        <item name="themeColorSecondaryInverseText">@color/secondaryTextInverseColor</item>
        <item name="themeColorDivideLine">@color/divideLineColor</item>
        <item name="themeColorViewBackground">@color/viewBackgroundColor</item>
        <item name="themeColorWindowBackground">@color/windowBackgroundColor</item>

        <item name="colorPrimary">?attr/themeColorPrimary</item>
        <item name="colorPrimaryDark">?attr/themeColorPrimaryDark</item>
        <item name="colorAccent">?attr/themeColorAccent</item>
        <item name="android:textColor">?attr/themeColorPrimaryText</item>

        <item name="android:textColorPrimary">?attr/themeColorPrimaryText</item>
        <item name="android:textColorSecondary">?attr/themeColorSecondaryText</item>
        <item name="android:textColorPrimaryInverse">?attr/themeColorPrimaryInverseText</item>
        <item name="android:textColorSecondaryInverse">?attr/themeColorSecondaryInverseText</item>

        <item name="android:windowBackground">?attr/themeColorWindowBackground</item>
    </style>

    <style name="AppTheme.Light">
        <item name="themeColorPrimary">@color/primaryColor</item>
        <item name="themeColorPrimaryDark">@color/primaryDarkColor</item>
        <item name="themeColorAccent">@color/accentColor</item>
        <item name="themeColorAccentDark">@color/accentDarkColor</item>
        <item name="themeColorPrimaryInverse">@color/primaryInverseColor</item>
        <item name="themeColorAccentInverse">@color/accentInverseColor</item>
        <item name="themeColorPrimaryText">@color/primaryTextColor</item>
        <item name="themeColorSecondaryText">@color/secondaryTextColor</item>
        <item name="themeColorPrimaryInverseText">@color/primaryTextInverseColor</item>
        <item name="themeColorSecondaryInverseText">@color/secondaryTextInverseColor</item>
        <item name="themeColorDivideLine">@color/divideLineColor</item>
        <item name="themeColorWindowBackground">@color/windowBackgroundColor</item>
        <item name="themeColorViewBackground">@color/viewBackgroundColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.Dark">
        <item name="themeColorPrimary">@color/nightPrimaryColor</item>
        <item name="themeColorPrimaryDark">@color/nightPrimaryDarkColor</item>
        <item name="themeColorAccent">@color/nightAccentColor</item>
        <item name="themeColorAccentDark">@color/nightAccentDarkColor</item>
        <item name="themeColorPrimaryInverse">@color/nightPrimaryInverseColor</item>
        <item name="themeColorAccentInverse">@color/nightAccentInverseColor</item>
        <item name="themeColorPrimaryText">@color/nightPrimaryTextColor</item>
        <item name="themeColorSecondaryText">@color/nightSecondaryTextColor</item>
        <item name="themeColorPrimaryInverseText">@color/nightPrimaryTextInverseColor</item>
        <item name="themeColorSecondaryInverseText">@color/nightSecondaryTextInverseColor</item>
        <item name="themeColorDivideLine">@color/nightDivideLineColor</item>
        <item name="themeColorWindowBackground">@color/nightWindowBackgroundColor</item>
        <item name="themeColorViewBackground">@color/nightViewBackgroundColor</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="AppTheme.TabLayoutTextAppearance">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ExpandedTitleTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">#75000000</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
