<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="themeColorPrimary" format="reference|color"/>
    <attr name="themeColorPrimaryDark" format="reference|color"/>
    <attr name="themeColorAccent" format="reference|color"/>
    <attr name="themeColorAccentDark" format="reference|color"/>
    <attr name="themeColorPrimaryInverse" format="reference|color"/>
    <attr name="themeColorAccentInverse" format="reference|color"/>
    <attr name="themeColorPrimaryText" format="reference|color"/>
    <attr name="themeColorSecondaryText" format="reference|color"/>
    <attr name="themeColorPrimaryInverseText" format="reference|color"/>
    <attr name="themeColorSecondaryInverseText" format="reference|color"/>
    <attr name="themeColorDivideLine" format="reference|color"/>
    <attr name="themeColorViewBackground" format="reference|color" />
    <attr name="themeColorWindowBackground" format="reference|color" />

    <declare-styleable name="OverScrollView">
        <attr name="header" format="reference" />
        <attr name="content" format="reference" />
    </declare-styleable>

    <declare-styleable name="ItemView">
        <attr name="icon" format="reference" />
        <attr name="iconTint" format="color"/>
        <attr name="title" format="string" />
        <attr name="description" format="string" />
    </declare-styleable>

    <declare-styleable name="DividingLine">
        <attr name="lineColor" format="color" />
        <attr name="paddingColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AvatarView">
        <attr name="avatarImage" format="reference" />
        <attr name="avatarTint" format="color"/>
        <attr name="verifiedIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground" />
    </declare-styleable>

    <declare-styleable name="SwipeBackLayout">
        <attr name="edgeSize" format="dimension"/>
        <attr name="edgeFlag">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="all" value="3" />
        </attr>
        <attr name="shadowLeft" format="reference"/>
        <attr name="shadowRight" format="reference"/>
        <attr name="shadowBottom" format="reference"/>
    </declare-styleable>

</resources>